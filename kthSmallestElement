class Solution {
    public int kthSmallest(int[] arr, int k) {
        Arrays.sort(arr);
        return arr[k - 1];
    }

    public static void main(String[] args) {
        int[] arr = {10, 5, 4, 3, 48, 6, 2, 33, 53, 10};
        int k = 4;
        Solution min= new Solution();
        System.out.println(k + "th smallest element is: " + min.kthSmallest(arr, k));
        
    }
}
